@page "/logowanie"
@inherits SignInComponent
@layout MainLayout

<style>
  
    div .light-box {
        border: solid #ddd 1px;
        border-radius: 2%;
        padding: 2rem;
    }

    .btn-facebook {
        width: 100%;
        background-color: #3b5998;
        color: white;
        margin-bottom: 2rem;
    }
        .btn-facebook:hover {
            opacity: 0.8;
            color: white
        }

    .btn-google {
        width: 100%;
        background-color: #db4437;
        color: white;
    }
    .btn-google:hover{
        opacity: 0.8;
        color:white
    }

    .btn-content {
        margin-left: 0.5rem
    }
</style>
<div class="container ">
    <div class="row container-margin-top">
        <div class="col-md-6 offset-md-3 light-box">
            <form>
                <h2>Zaloguj</h2>
                <p>
                    Nie masz konta? <NavLink class="btn" href="/rejestracja">Zarejestruj się</NavLink>
                </p>
                <div class="alert alert-danger" style="@(IsAlertVisible ? "visibility:visible;" : "display:none;")" role="alert">@ErrorMessage</div>
                <div class="form-group">
                    <label for="login">Login/E-mail</label>
                    <input type="text" id="email" class="form-control" bind="Login"/>
                </div>
                <div class="form-group">
                    <label for="password">Hasło</label>
                    <input type="password" id="password" class="form-control" bind="Password"/>
                </div>
                <button class="btn btn-primary btn-lg" type="button" onclick=@SignInApp>Zaloguj</button>
                <div class="container-margin-top">
                    <button class="btn btn-lg btn-facebook" onclick="@SignInFacebook" type="button"><i class="fa fa-facebook-official" aria-hidden="true"></i> <span class="btn-content">Zaloguj przez Facebook</span></button>
                    <button class="btn-google btn btn-lg" onclick="@SignInGoogle" type="button"><i class="fa fa-google-plus-square" aria-hidden="true"></i> <span class="btn-content">Zaloguj przez Google</span></button>
                </div>
            </form>
        </div>
    </div>
</div>