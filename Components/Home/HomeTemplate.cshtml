@page "/"
@layout MainLayout
@inherits HomeComponent
<style>
    body {
        font-family: 'Lato', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: 'Lato', 'Helvetica Neue', Helvetica, Arial, sans-serif;
        font-weight: 700;
    }

    header.masthead {
        position: relative;
        background-color: #343a40;
        background: url("../img/header_class.jpg") no-repeat center center;
        background-size: cover;
        padding-top: 8rem;
        padding-bottom: 8rem;
    }

        header.masthead .overlay {
            position: absolute;
            background-color: #212529;
            height: 100%;
            width: 100%;
            top: 0;
            left: 0;
            opacity: 0.3;
        }

        header.masthead h1 {
            font-size: 2rem;
        }

    @@media (min-width: 768px) {
        header.masthead {
            padding-top: 12rem;
            padding-bottom: 12rem;
        }

            header.masthead h1 {
                font-size: 3rem;
            }
    }

    .main-panel {
        margin-top: 5em;
    }
</style>
<header class=" row masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <h1 class="mb-5">Znajdź dodatkowe zajęcia dla siebie!</h1>
            </div>
            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                <form>
                    <div class="form-row">
                        <div class="col-12 col-md-9 mb-2 mb-md-0">
                            <input type="email" class="form-control form-control-lg" placeholder="Czego szukasz?">
                        </div>
                        <div class="col-12 col-md-3">
                            <button type="submit" class="btn btn-block btn-lg btn-primary">Wyszukaj</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</header>
<div class="container main-panel">
    <div class="row">
        <div class="col-md-4 mb-5">
            <div class="card h-100">
                <div class="card-body" style="@(DataLoaded ? "visibility:visible;" : "visibility:hidden;")">
                    <h2 class="card-title">@PromotingLectures[0]?.Name</h2>
                    <p class="card-text">@PromotingLectures[0]?.Description</p>
                </div>
                <div class="loader-md" style="@(!DataLoaded ? "display:block;" : "display:none")"></div>
                <div class="card-footer">
                    <a href="/zajecia/@PromotingLectures[0]?.Id" style="@(DataLoaded ? "pointer-events:auto" : "pointer-events:none")" class="btn btn-primary btn-sm">Więcej</a>
                </div>
            </div>
        </div>
        <!-- /.col-md-4 -->
        <div class="col-md-4 mb-5">
            <div class="card h-100">
                <div class="card-body" style="@(DataLoaded ? "visibility:visible;" : "visibility:hidden;")">
                    <h2 class="card-title">@PromotingLectures[1]?.Name</h2>
                    <p class="card-text">@PromotingLectures[1]?.Description</p>
                </div>
                <div class="loader-md" style="@(!DataLoaded ? "display:block;" : "display:none")"></div>
                <div class="card-footer">
                    <a href="/zajecia/@PromotingLectures[1]?.Id"  style="@(DataLoaded ? "pointer-events:auto" : "pointer-events:none")"  class="btn btn-primary btn-sm">Więcej</a>
                </div>
            </div>
        </div>
        <!-- /.col-md-4 -->
        <div class="col-md-4 mb-5">
            <div class="card h-100">
                <div class="card-body" style="@(DataLoaded ? "visibility:visible;" : "visibility:hidden;")">
                    <h2 class="card-title">@PromotingLectures[2]?.Name</h2>
                    <p class="card-text">@PromotingLectures[2]?.Description</p>
                </div>
                <div class="loader-md" style="@(!DataLoaded ? "display:block;" : "display:none")"></div>
                <div class="card-footer">
                    <a href="/zajecia/@PromotingLectures[2]?.Id" style="@(DataLoaded ? "pointer-events:auto" : "pointer-events:none")"  class="btn btn-primary btn-sm">Więcej</a>
                </div>
            </div>
        </div>
        <!-- /.col-md-4 -->
    </div>
</div>